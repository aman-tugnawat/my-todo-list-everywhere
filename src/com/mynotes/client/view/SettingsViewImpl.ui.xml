<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.settingsHeader {
			font-size: 1.7em;
			padding: 0;
			margin: 0px 0px 5px 0px;
		}
		
		.settingsCategory {
			border-top: 1px solid #dbd9d5;
			padding-top: 20px;
			margin-bottom: 20px;
			overflow: auto;
			width: 100%
		}
		
		.settingsCategoryName {
			font-size: 1em;
			font-weight: bold;
			margin: 0;
			width: 150px;
			position:relative;
			float: left;
		}
		
		.settingsCategoryContent {
			margin: 0;
			position:relative;
			float:left;
		}
		
		.settingsFooter {
			border-top: 1px solid #dbd9d5;
			padding-top: 10px;
			display:block;
		}
	</ui:style>

	<g:VerticalPanel width="100%">
		<g:HTMLPanel>
			<div class="centerContainer">
				<h2 class='{style.settingsHeader}'>
					Settings
				</h2>
				<div class='{style.settingsCategory}'>
					<div class='{style.settingsCategoryName}'>My account </div>
					<div class='{style.settingsCategoryContent}'>
						<g:Anchor href='javascript:;' ui:field="deleteAccountAnchor">Delete
							my account</g:Anchor>
					</div>
				</div>
				<div class='{style.settingsFooter}'>
					<g:Anchor href='javascript:;' ui:field="backButton">&lt;&lt;
						Back to
						todo
						list</g:Anchor>
				</div>
			</div>
		</g:HTMLPanel>
	</g:VerticalPanel>
</ui:UiBinder> 